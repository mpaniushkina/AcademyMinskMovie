<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/filmRowHeigh"
    android:padding="@dimen/rowPadding">

    <ImageView
        android:id="@+id/filmImage"
        android:layout_width="@dimen/filmImageWidth"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/tvListFilmTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/startTextMargin"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/filmImage"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/tvListFilmOverview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/startTextMargin"
        android:layout_marginStart="@dimen/startTextMargin"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSize"
        android:ellipsize="end"
        android:maxLines="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/filmImage"
        app:layout_constraintTop_toBottomOf="@+id/tvListFilmTitle">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>